<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Java-hr</display-name>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <session-config>
	<session-timeout>90</session-timeout>
  </session-config>
  
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<servlet-class>com.hr.controller.user.CheckUser</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Logout</servlet-name>
  	<servlet-class>com.hr.controller.user.LogoutUser</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>SaveUser</servlet-name>
  	<servlet-class>com.hr.controller.user.SaveUser</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>SaveUser</servlet-name>
  	<url-pattern>/view/user/saveUser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>UpdateUser</servlet-name>
  	<servlet-class>com.hr.controller.user.UpdateUser</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>UpdateUser</servlet-name>
  	<url-pattern>/view/user/updateUser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AddApply</servlet-name>
  	<servlet-class>com.hr.controller.apply.AddApply</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>AddApply</servlet-name>
  	<url-pattern>/view/apply/addApply</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>SaveApply</servlet-name>
  	<servlet-class>com.hr.controller.apply.SaveApply</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>SaveApply</servlet-name>
  	<url-pattern>/view/apply/saveApply</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AddTrain</servlet-name>
  	<servlet-class>com.hr.controller.train.AddTrain</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>AddTrain</servlet-name>
  	<url-pattern>/view/train/addTrain</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>UpdateTrain</servlet-name>
  	<servlet-class>com.hr.controller.train.UpdateTrain</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>UpdateTrain</servlet-name>
  	<url-pattern>/view/train/updateTrain</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AddPay</servlet-name>
  	<servlet-class>com.hr.controller.pay.AddPay</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>AddPay</servlet-name>
  	<url-pattern>/view/pay/addPay</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>UpdatePay</servlet-name>
  	<servlet-class>com.hr.controller.pay.UpdatePay</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>UpdatePay</servlet-name>
  	<url-pattern>/view/pay/updatePay</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Remove</servlet-name>
  	<servlet-class>com.hr.controller.Remove</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Remove</servlet-name>
  	<url-pattern>/view/user/remove</url-pattern>
  	<url-pattern>/view/apply/remove</url-pattern>
  	<url-pattern>/view/train/remove</url-pattern>
  	<url-pattern>/view/rewards/remove</url-pattern>
  	<url-pattern>/view/pay/remove</url-pattern>
  </servlet-mapping>
  
</web-app>